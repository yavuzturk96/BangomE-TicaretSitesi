<script type="text/javascript">

    $(document).ready(function () {
        SepetSay();
    });
    function SepetSay() {
        $.ajax({
            type: 'GET',
            url: '/Home/Sepettekiler',
            dataType: "JSON",
            success: function (data) {
                $('#checkout_items').html("");
                var sayac = 0;
                $(data.Result).each(function (item) {
                    var a = data.Result[item].SiparisID;
                    if (a == null)
                    {
                        sayac++;
                    }
                   
                });
                
                $('#checkout_items').append(sayac);
            }
            
        });
    }
</script>