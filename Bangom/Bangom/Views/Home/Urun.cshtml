                        <div class="row">
                            <div class="col-lg-3 thumbnails_col order-lg-1 order-2">
                                <div class="single_product_thumbnails">
                                    @if (resimSayısı == 0)
                                    {
                                    <ul>
                                        <li class="active"><img src="@backImg" alt="" data-image="@backImg"></li>
                                    </ul>
                                    }
                                    else
                                    {
                                        for (int i = 0; i < resimSayısı; i++)
                                        {
                                            <ul>
                                                <li class="active"><img src="@images[i]" alt="" data-image="@images[i]"></li>
                                            </ul>
                                        }
                                    }
                                </div>
                            </div>
                            <div class="col-lg-9 image_col order-lg-2 order-1">
