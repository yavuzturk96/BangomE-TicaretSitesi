@model Bangom.Models.Urun
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Collections.ArrayList images = new System.Collections.ArrayList();
    int resimSayısı = 0;
    var base65 = Convert.ToBase64String(Model.UrunFoto);
    var backImg = String.Format("data:image/gif;base64,{0}", base65);
}
@foreach (var item in Model.UrunResim)
{
    if (resimSayısı < 4)
    {
        if (item.UrunResmi != null) //Databaseden resim çekme
        {
            var base64 = Convert.ToBase64String(item.UrunResmi);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            images.Add(imgSrc);
            resimSayısı++;
        }
    }
}


